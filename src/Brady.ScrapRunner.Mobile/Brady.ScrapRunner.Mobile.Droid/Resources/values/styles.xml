<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="ScrapRunnerTheme.Base" parent="@android:style/Theme.Holo.Light.DarkActionBar"> </style>
  <style name="ScrapRunnerTheme" parent="ScrapRunnerTheme.Base">
    <item name="android:actionBarStyle">@style/ScrapRunnerTheme.ActionBarStyle</item>
  </style>
  <style name="ScrapRunnerTheme.ActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:titleTextStyle">@style/ScrapRunnerTheme.ActionBar.TitleTextStyle</item>
    <item name="android:background">@color/material_gray_900</item>
  </style>
  <style name="ScrapRunnerTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
    <item name="android:textColor">@android:color/white</item>
  </style>
  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@color/material_gray_900</item>
    <item name="android:windowNoTitle">true</item>
  </style>  
</resources>