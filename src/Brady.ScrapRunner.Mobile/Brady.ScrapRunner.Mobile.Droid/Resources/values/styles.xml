<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:tools="http://schemas.android.com/tools">
  
  <style name="ScrapRunnerTheme" parent="ScrapRunnerTheme.Base" />
    
  <style name="ScrapRunnerTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">@color/material_500</item>
    <item name="colorPrimaryDark">@color/material_500</item>
    <item name="colorAccent">@color/material_100</item>
    <item name="android:navigationBarColor" tools:targetApi="21">@color/material_900</item>
  </style>

  <style name="ScrapRunnerTheme.SignIn" parent="ScrapRunnerTheme.Base">
    <item name="android:windowBackground">@drawable/loginsplash800x1280_4</item>
  </style>

  <style name="ScrapRunnerTheme.TextAppearance.Light" parent="ScrapRunnerTheme.Base">
    <item name="android:textColorHint">@color/material_white</item>
    <item name="android:textColorPrimary">@color/material_white</item>
    <item name="colorControlNormal">@color/material_white</item>
    <item name="colorControlActivated">@color/material_orange</item>
    <item name="colorControlHighlight">@color/material_orange</item>
    <item name="colorAccent">@color/material_orange</item>
    <item name="android:layout_marginBottom">10dp</item>
  </style>
  
  <style name="RoundedEditTextTop" parent="Base.Widget.AppCompat.EditText">
    <item name="android:background">@drawable/rounded_edittext_top_states</item>
    <item name="android:padding">4dp</item>
  </style>

  <style name="RoundedEditTextBottom" parent="Base.Widget.AppCompat.EditText">
    <item name="android:background">@drawable/rounded_edittext_bottom_states</item>
    <item name="android:padding">4dp</item>
  </style>

  <style name="Theme.Splash" parent="android:Theme">
    <item name="android:windowBackground">@drawable/loadingxamarin</item>
    <item name="android:windowNoTitle">true</item>
  </style>

</resources>